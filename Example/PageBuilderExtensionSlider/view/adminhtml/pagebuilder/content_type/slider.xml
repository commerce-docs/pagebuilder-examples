<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_type.xsd">
    <type name="slider"
          label="MySlider"
          preview_component="Example_PageBuilderExtensionSlider/js/content-type/slider/preview">
        <appearances>
            <appearance name="default">
                <elements>
                    <element name="main">
                        <attribute name="center_mode" source="data-center-mode"/>
                        <attribute name="center_padding" source="data-center-padding"/>
                    </element>
                </elements>
            </appearance>
        </appearances>
    </type>
</config>
